cc = cli.cc or "gcc"
local arch = cli.arch or "amd64"
local trampoline := $arch/trampoline

return b{
    $ loader: loader.o $trampoline.o
        $cc $input -o $output
    $ loader.o: loader.c
        $cc $input -c -o $output -O2
    $ $trampoline.o: $trampoline.s
        $cc $input -c -o $output

    include("test/build.knit"),
}
