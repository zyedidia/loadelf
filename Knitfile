cc = cli.cc or "gcc"
local arch = cli.arch or "arm64"
local cflags = "-ffixed-x15 -ffixed-x21 -ffixed-x22 -ffixed-x14 -ffixed-x24 -ffixed-x23"

return b{
    $ loader: loader.o $arch/trampoline.o $arch/setup.o $arch/syscall.o
        $cc $input -o $output -static -g3
    $ %.o: %.c
        $cc $cflags $input -c -o $output -O2 -g3
    $ $arch/%.o: $arch/%.s
        $cc $input -c -o $output
    $ format:VB:
        clang-format -i loader.c

    include("test/build.knit"),
}
